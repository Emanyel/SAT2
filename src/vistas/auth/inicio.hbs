  <div class="container">

    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5">
          <div class="card-body">
            <h5 class="card-title text-center">Iniciar Sesión</h5>
            <form class="form-signin" action ="/inicio" method="POST"> 
              <div class="form-label-group">
                <input type="number"  name="empleado" class="form-control" placeholder="Escribe tu numero de usuario" required autofocus>
                <label for="inputEmail">Escribe tu numero de usuario</label>
              </div>

              <div class="form-label-group">
                <input type="password"  name="password" class="form-control" placeholder="Escribe tu contraseña" required>
                <label for="inputEmail">Escribe tu contraseña</label>
              </div>

              <div class="custom-control custom-checkbox mb-3">
                <input type="checkbox" class="custom-control-input" id="customCheck1">
                <label class="custom-control-label" for="customCheck1">Recordar usuario y contraseña</label>
              </div>
              <div class="form-group">
              <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Iniciar sesión</button>
              </div>
              <div class="form-group">
               <button class="btn btn-lg btn-primary btn-block text-uppercase">Registrarse</button>
              </div>
              </form>
          </div>
        </div>
      </div>
    </div>
  </div>